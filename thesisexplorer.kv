ScreenManager:
    MainScreen:
    SearchScreen:

<MainScreen>:
    name: "main"
    MDBoxLayout:
        orientation: 'horizontal'
        SideBar:
        MDBoxLayout:
            orientation:'vertical'
            size_hint: (.824, 1)

<SearchScreen>:
    name: "search"
    MDRectangleFlatButton:
        text: 'Go to Main'
        pos_hint: {'center_x': 0.5, 'center_y': 0.5}
        on_press: root.manager.current = 'main'
